{
  "name": "@jiakun-zhao/eslint-config",
  "type": "module",
  "version": "4.0.1",
  "packageManager": "pnpm@10.8.1",
  "description": "Jiakun Zhao's ESLint config.",
  "author": "Jiakun Zhao <hi@zhaojiakun.com>",
  "license": "MIT",
  "homepage": "https://github.com/jiakun-zhao/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "config-inspector --open=false",
    "prepublishOnly": "pnpm typegen && pnpm build",
    "release": "bumpp && pnpm publish && npx cnpm sync @jiakun-zhao/eslint-config",
    "stub": "unbuild --stub",
    "test": "vitest",
    "typegen": "tsx ./scripts/typegen.ts"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-vue": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-astro": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-flat-config-utils": "^2.0.1",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-command": "^3.2.0",
    "eslint-plugin-import-x": "^4.10.5",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-perfectionist": "^4.11.0",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.2",
    "@eslint/core": "^0.13.0",
    "@jiakun-zhao/utils": "^1.3.1",
    "@types/node": "^22.14.1",
    "@typescript-eslint/types": "^8.30.1",
    "bumpp": "^10.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-vue": "^10.0.0",
    "eslint-typegen": "^2.1.0",
    "eslint-vitest-rule-tester": "^2.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.1"
  }
}
