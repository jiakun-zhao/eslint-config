{
  "name": "@jiakun-zhao/eslint-config",
  "type": "module",
  "version": "4.1.6",
  "packageManager": "pnpm@10.12.1",
  "description": "Jiakun Zhao's ESLint config.",
  "author": "Jiakun Zhao <hi@zhaojiakun.com>",
  "license": "MIT",
  "homepage": "https://github.com/jiakun-zhao/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "config-inspector --open=false",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && pnpm publish && npx cnpm sync @jiakun-zhao/eslint-config",
    "stub": "unbuild --stub",
    "test": "vitest",
    "typegen": "tsx ./scripts/typegen.ts"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-vue": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-astro": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@unocss/eslint-plugin": "66.1.0-beta.12",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-flat-config-utils": "^2.1.0",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-command": "^3.2.1",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-oxlint": "^1.1.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-regexp": "^2.9.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.1.0",
    "@eslint/core": "^0.15.0",
    "@jiakun-zhao/utils": "^1.3.2",
    "@types/node": "^24.0.3",
    "@typescript-eslint/types": "^8.34.1",
    "bumpp": "^10.1.1",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-vue": "^10.2.0",
    "eslint-typegen": "^2.2.0",
    "eslint-vitest-rule-tester": "^2.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
